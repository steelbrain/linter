{
  "name": "linter",
  "main": "./lib/index.js",
  "author": "steelbrain",
  "readme": "./README.md",
  "version": "2.2.0",
  "description": "A Base Linter with Cow Powers",
  "repository": "https://github.com/steelbrain/linter",
  "license": "MIT",
  "keywords": [
    "linter"
  ],
  "private": true,
  "scripts": {
    "test": "(apm test) && (flow check) && (eslint . )"
  },
  "engines": {
    "atom": ">=1.14.0 <2.0.0"
  },
  "consumedServices": {
    "linter": {
      "versions": {
        "^1.0.0": "consumeLinterLegacy",
        "2.0.0": "consumeLinter"
      }
    },
    "linter-ui": {
      "versions": {
        "1.0.0": "consumeUI"
      }
    }
  },
  "providedServices": {
    "linter-indie": {
      "versions": {
        "1.0.0": "provideIndieLegacy",
        "2.0.0": "provideIndie"
      }
    }
  },
  "dependencies": {
    "atom-package-deps": "^4.4.1",
    "atom-select-list": "0.2.0",
    "chokidar": "^1.7.0",
    "cool-trim": "^1.1.1",
    "lodash.uniq": "^4.5.0",
    "minimatch": "^3.0.3",
    "sb-debounce": "^1.0.1",
    "sb-fs": "^3.0.0"
  },
  "devDependencies": {
    "eslint-config-steelbrain": "^3.0.0",
    "flow-bin": "^0.51.1",
    "jasmine-fix": "^1.0.0"
  },
  "package-deps": [
    "linter-ui-default"
  ],
  "configSchema": {
    "lintPreviewTabs": {
      "type": "boolean",
      "description": "Lint tabs while they are still in preview status",
      "default": true,
      "order": 1
    },
    "lintOnOpen": {
      "title": "Lint on Open",
      "description": "Lint files automatically when they are opened",
      "type": "boolean",
      "default": true,
      "order": 2
    },
    "lintOnChange": {
      "title": "Lint on Change",
      "description": "Lint files while typing, without the need to save (only for supported providers)",
      "type": "boolean",
      "default": true,
      "order": 3
    },
    "lintOnChangeInterval": {
      "title": "Lint on Change Interval",
      "description": "Interval at which linting is done as you type (in ms)",
      "type": "integer",
      "default": 300,
      "order": 4
    },
    "ignoreFileSources": {
      "title": "Filetypes to read for list of ignored files",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [".gitignore", ".hgignore"],
      "order": 5
    },
    "disabledProviders": {
      "title": "Disabled providers",
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Names of disabled linter providers",
      "default": [],
      "order": 6
    }
  }
}
